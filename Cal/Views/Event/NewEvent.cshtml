<div class="row">
    <div class="col-md-6 offset-3">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Извините, произошла ошибка!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="NewEvent">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Введите название события..." maxlength="200" id="text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" placeholder="Опишите ваши планы в подробностях..." maxlength="3000"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" type="time" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <!--Выбор категории.-->
                    <div class="form-group" id ="chooseCategory">
                        <label asp-for="Category.CategoryName" class="control-label">Категория</label>
                        <select asp-for="Category.CategoryName" asp-items="CategoryName" class="form-control" onchange="updateCategory(this)">
                            <option value="">Выберите категорию</option>
                        </select>
                    </div>

                    <div class="form-group" style="display:none" id="CategoryId">
                        <input asp-for="Category.CategoryId" class="form-control" />
                    </div>

                    <div style="display:none" class="form-group">
                        <label asp-for="Category.CategoryColor" class="control-label"></label>
                        <input asp-for="Category.CategoryColor" type="color" class="form-control"/>
                        <span asp-validation-for="Category.CategoryColor" class="text-danger"></span>
                    </div>


                    <button id="addCategoryButton" style="color:black; width:50px; background-color:white;" type="button" onclick="closeC()">
                        +
                    </button>

                    <div id="newCategoryForm" style="display:none">
                        <div class="form-group">
                            <label asp-for="Category.CategoryName" class="control-label"></label>
                            <input asp-for="Category.CategoryName" class="form-control" />
                            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Category.CategoryColor" class="control-label"></label>
                            <input asp-for="Category.CategoryColor" type="color" class="form-control" />
                            <span asp-validation-for="Category.CategoryColor" class="text-danger"></span>
                        </div>
                    </div>

                    <button id="backButton" type="button" style="display:none;color:black; background-color:white;" onclick="backC()">
                        Выбрать сущетсвующую категорию
                    </button>

                    <br/>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Добавить событие" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Отмена</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>